@page
@model RegisterModel
@{
    ViewData["Title"] = "Illuminare Toys - Novo Usuário";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Novo Usuário</h3>
        </div>
        <div class="card-body">
            <div class="card-body register-card-body">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <small> <span asp-validation-for="Input.FirstName" class="text-danger"></span></small>
                    <div class="input-group mb-3">
                        <input asp-for="Input.FirstName" type="text" class="form-control" placeholder="Nome">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>

                    </div>
                    <small><span asp-validation-for="Input.LastName" class="text-danger"></span></small>
                    <div class="input-group mb-3">
                        <input asp-for="Input.LastName" type="text" class="form-control" placeholder="Sobrenome">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <small> <span asp-validation-for="Input.UserName" class="text-danger"></span></small>
                    <div class="input-group mb-3">
                        <input asp-for="Input.UserName" type="text" class="form-control" placeholder="Usuário">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <small><span asp-validation-for="Input.Email" class="text-danger"></span></small>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <small><span asp-validation-for="Input.Password" class="text-danger"></span></small>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Senha">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <small><span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span></small>
                    <div class="input-group mb-3">
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirmação de Senha">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <!-- /.col -->
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Criar</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
