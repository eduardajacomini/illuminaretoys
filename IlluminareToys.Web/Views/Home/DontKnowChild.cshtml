@model IEnumerable<GetProductCategoryOutput>

@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
    ViewData["Title"] = "Catálogo - Não Conheço a Criança";
}

<div class="col-md-12">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3">
                <div class="card card-button mx-auto">
                    <a class="card-body" asp-action="DontKnowChildCategoryProducts" asp-route-category="@item.Description">
                        <h3 class="display-5 text-center card-button-label">@item.Description</h3>
                    </a>
                </div>
            </div>
        }
    </div>
</div>


<style>
    .card-button {
        background-color: #f012be !important;
        border-radius: 10px;
        box-shadow: 0 0 2px #888;
    }

        .card-button:hover {
            cursor: pointer;
            opacity: 0.7;
        }

    .card-button-label {
        color: white !important;
        font-weight: bold;
    }
</style>