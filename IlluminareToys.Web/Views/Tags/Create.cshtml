@model CreateTagInput

@{
    ViewData["Title"] = "Illuminare Toys - Criar Tag";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";

    var groups = ViewBag.Groups as IEnumerable<GetGroupOutput>;
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Criar Tag</h3>
            <div class="card-tools">
                <a class="btn btn-primary" asp-action="Index">Voltar</a>
            </div>
        </div>
        <div class="card-body">
            <form>
                <div class="col-md-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Descrição</label>
                        <input id="input-description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="row">
                        @foreach (var group in groups)
                        {
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label class="control-label">@group.Name</label>
                                    <input type="text"
                                           id="@group.Id"
                                           class="form-control group-age"
                                           placeholder="Informe a idade" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-primary" onclick="saveTag()">Criar</button>
                </div>

            </form>
        </div>
    </div>
</div>

<script>
    const saveTag = () => {
        showLoading();

        const inputsGroups = $('.group-age');

        const body = {
            description: $('#input-description').val(),
        }

        axios.post('/Tags/Create', body)
            .then(_ => {
                location.reload()
            })
    }
</script>