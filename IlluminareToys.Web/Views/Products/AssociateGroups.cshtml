<script>
    $(document).ready(function () {
        $('.select-ages').select2();
    });

    const saveAssociation = (productId) => {
        showLoading();

        const groupsIds = $('#select-groups').val();

        console.log(groupsIds);

        axios.post('/Products/AssociateGroups', {
            GroupIds: groupsIds,
            ProductId: productId
        }).then(_ => {
            location.reload()
        })
    }

    const saveGroupAges = (productId) => {
        showLoading();

        /*        const selectsAges = $('.select-ages');*/

        const body = {
            ProductGroups: []
        };

        $('.select-ages').each((index, el) => {
            console.log(el.id);
            const ageIds = $(`#${el.id}`).val();

            body.ProductGroups.push({
                ProductId: productId,
                GroupId: el.id,
                AgeIds: ageIds
            });
        })

        axios.post('/Products/AssociateGroups', body)
            .then(_ => {
                location.reload()
            })
    }
</script>

