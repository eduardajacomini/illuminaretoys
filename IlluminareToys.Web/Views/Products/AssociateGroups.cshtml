@model AssociateGroupsOutput

@{
    ViewData["Title"] = "Illuminare Toys - Associar Grupos";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Associar Tag ao produto @Model.Product.Description</h3>
            <div class="card-tools">
                <a class="btn btn-primary" asp-action="Index">Voltar</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <form>
                        <div class="form-group">
                            <label>Tags</label>
                            <select class="form-control" id="select-groups" multiple="multiple">
                                @foreach (var item in Model.Groups)
                                {
                                    if (Model.Product.Groups.Any(x => x.GroupId.Equals(item.Id)))
                                    {
                                        <option value="@item.Id" selected>@item.Name</option>

                                    }
                                    else
                                    {
                                        <option value="@item.Id">@item.Name</option>

                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" id="button-salvar" onclick="saveAssociation('@Model.Product.Id')">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#select-groups').select2();
    });

    const saveAssociation = (productId) => {
        showLoading();

        const groupsIds = $('#select-groups').val();

        axios.post('/Products/AssociateGroups', {
            GroupsIds: groupsIds,
            ProductId: productId
        }).then(_ => {
            location.reload()
        })
    }
</script>

<style>
    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        color: black;
    }
</style>