@model AssociateTagsOutput

@{
    ViewData["Title"] = "Associar Tags";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Associar Tag ao @Model.Product.Description</h3>
            <div class="card-tools">
                <a class="btn btn-primary" asp-action="Index">Voltar</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <form>
                        <div class="form-group">
                            <label>Tags</label>
                            <select class="form-control" id="select-tags" multiple="multiple">
                                @foreach (var item in Model.Tags)
                                {
                                    if (Model.Product.Tags.Any())
                                    {
                                        <option value="@item.Id">@item.Description</option>

                                    }
                                    else
                                    {
                                        <option value="@item.Id">@item.Description</option>

                                    }

                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" id="button-salvar" onclick="saveAssociation(@Model.Product.BlingId)">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#select-tags').select2();
    });

    const saveAssociation = (blingProductId) => {
        showLoading();

        const tagIds = $('#select-tags').val();

        $.ajax({
            type: 'POST',
            url: '/Products/AssociateTags',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            data: JSON.stringify({
                TagIds: tagIds,
                BlingProductId: blingProductId
            })
        }).then(r => location.reload())
    }
</script>

<style>
    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        color: black;
    }
</style>